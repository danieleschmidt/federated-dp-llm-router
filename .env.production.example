# Production Environment Variables
# IMPORTANT: Copy this file to .env.production and set actual values

# Security (REQUIRED)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-minimum-32-chars
HIPAA_MASTER_KEY=your-base64-encoded-master-encryption-key-here

# Database
DATABASE_URL=postgresql://feduser:secure_password@postgres:5432/federated_dp_llm
POSTGRES_DB=federated_dp_llm
POSTGRES_USER=feduser
POSTGRES_PASSWORD=secure_database_password_here

# Redis
REDIS_URL=redis://:secure_redis_password@redis:6379/0
REDIS_PASSWORD=secure_redis_password_here

# Monitoring
GRAFANA_PASSWORD=secure_grafana_admin_password

# Application Settings
NODE_ENV=production
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_SCANNING=true

# Privacy Configuration
DEFAULT_EPSILON_PER_QUERY=0.1
DEFAULT_DELTA=1e-5
MAX_BUDGET_PER_USER=10.0
PRIVACY_BUDGET_RESET_PERIOD=86400

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
MAX_CONCURRENT_REQUESTS=50

# Session Management
SESSION_TIMEOUT=3600
MAX_FAILED_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900

# SSL/TLS Configuration
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem
SSL_CA_PATH=/app/ssl/ca.pem

# Compliance
AUDIT_RETENTION_DAYS=2555  # 7 years for HIPAA
ENABLE_GDPR_MODE=true
DATA_RETENTION_DAYS=2555